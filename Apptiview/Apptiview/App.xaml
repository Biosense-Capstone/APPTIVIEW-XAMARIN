<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Apptiview.App">
    <Application.Resources>
        <ResourceDictionary>
            <!--Global Styles-->
            <!--<Color x:Key="NavigationPrimary">#393E46</Color>-->
            <Color x:Key="windowBackground">#393E46</Color>
            <Color x:Key="NavigationPrimary">#22252A</Color>
            <!--<Color x:Key="windowBackground">#22252A</Color>-->
            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="{StaticResource windowBackground}" />
                <Setter Property="BarTextColor" Value="White" />
                <Setter Property="BackgroundColor" Value="{StaticResource NavigationPrimary}"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>