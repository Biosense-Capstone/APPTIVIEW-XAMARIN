<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Settings"
             x:Class="Apptiview.Views.SettingsPage">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Scan" x:Name="bleBtn" Clicked="ScanBluetooth" HorizontalOptions="End" VerticalOptions="Start"/>
            <ListView ItemsSource="{Binding StateBT}" SelectionMode="None"/>
            <ListView ItemsSource="{Binding DeviceList}" ItemSelected="OnSelection" />
            <!--<ListView ItemsSource="{Binding test}" ItemSelected="OnSelection" />-->
        </StackLayout>
    </ContentPage.Content>
</ContentPage>